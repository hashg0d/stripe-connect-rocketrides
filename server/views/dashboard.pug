extends layout

block header
  .user
    .block.profile
      .photo
      p Publisher since #{moment(pilot.created).format('MMMM YYYY')}
      h1 #{pilot.displayName()}
      .rating
    .block.week
      p This Week
      h1 $#{(ridesTotalAmount / 100).toFixed(2)}
      h2 Paid
    .block.available
      p Your Balance
      h1 $#{((balanceAvailable + balancePending) / 100).toFixed(2)}
      h2 $#{(balanceAvailable / 100).toFixed(2)} Available
    .block.stripe
      button(type="button", onclick="window.open('pilots/stripe/transfers', '_blank');") View Transfers
      form(action='/pilots/stripe/payout', method='POST', autocomplete='off')
        input(type='submit', value='Pay Out Now')
